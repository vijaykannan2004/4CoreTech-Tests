{
	"info": {
		"_postman_id": "business-management-tests",
		"name": "Business Management API Tests",
		"description": "API tests for business management functionality",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create Business - Valid",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"businessName\": \"ShopX\",\n  \"businessType\": 2,\n  \"city\": \"New York\",\n  \"postalCode\": \"10001\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/business/create",
					"host": ["{{base_url}}"],
					"path": ["api", "business", "create"]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 201', function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test('Response has business ID', function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.id).to.be.above(0);",
							"});",
							"",
							"pm.test('Business name is preserved', function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.businessName).to.eql('ShopX');",
							"});"
						]
					}
				}
			]
		},
